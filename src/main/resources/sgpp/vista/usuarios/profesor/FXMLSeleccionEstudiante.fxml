<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.Bloom?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="768.0" prefWidth="687.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sgpp.controlador.usuarios.profesor.FXMLSeleccionEstudianteController">
    <children>
        <!-- Header azul con título del sistema -->
        <Pane prefHeight="115.0" prefWidth="700.0" style="-fx-background-color: #6a92c8;">
            <children>
                <Label layoutX="28.0" layoutY="31.0" prefHeight="27.0" prefWidth="710.0" text="Sistema de Gestion de Practicas Profesionales">
                    <effect>
                        <Bloom threshold="0.08" />
                    </effect>
                    <font>
                        <Font name="Arial Bold Italic" size="24.0" />
                    </font>
                    <textFill>
                        <LinearGradient endX="1.0" endY="1.0">
                            <stops>
                                <Stop color="#e1e1e1" />
                                <Stop color="WHITE" offset="1.0" />
                            </stops>
                        </LinearGradient>
                    </textFill>
                </Label>
                <Label fx:id="lbNombreProfesor" layoutX="28.0" layoutY="67.0" prefHeight="27.0" text="Profesor">
                    <font>
                        <Font name="Arial Italic" size="18.0" />
                    </font>
                    <textFill>
                        <LinearGradient endX="0.4368932038834952" endY="1.0">
                            <stops>
                                <Stop color="#bfbfbf" />
                                <Stop color="WHITE" offset="1.0" />
                            </stops>
                        </LinearGradient>
                    </textFill>
                </Label>
            </children>
        </Pane>

        <!-- Botón Regresar -->
        <Button fx:id="btnRegresar" layoutX="29.0" layoutY="131.0" mnemonicParsing="false" onAction="#btnClicRegresar" prefHeight="31.0" prefWidth="149.0" style="-fx-background-color: #6a92c8;" text="Regresar" textFill="WHITE">
            <font>
                <Font name="Arial Bold" size="15.0" />
            </font>
        </Button>

        <!-- Botón Refrescar alineado a la derecha -->
        <Button fx:id="btnRefrescar" layoutX="520.0" layoutY="131.0" mnemonicParsing="false" onAction="#btnClicRefrescar" prefHeight="31.0" prefWidth="149.0" style="-fx-background-color: #6a92c8;" text="Refrescar" textFill="WHITE">
            <font>
                <Font name="Arial Bold" size="15.0" />
            </font>
        </Button>

        <!-- Tabla de estudiantes -->
        <TableView fx:id="tblEstudiantes" layoutX="29.0" layoutY="177.0" prefHeight="517.0" prefWidth="644.0" style="-fx-background-radius: 10;">
            <columns>
                <TableColumn fx:id="colMatricula" prefWidth="300.0" text="Matrícula" />
                <TableColumn fx:id="colNombre" prefWidth="344.0" text="Nombre" />
            </columns>
        </TableView>

        <!-- Botones inferiores -->
        <Button fx:id="btnConsultar" layoutX="29.0" layoutY="710.0" mnemonicParsing="false" onAction="#btnClicConsultar" prefHeight="31.0" prefWidth="149.0" style="-fx-background-color: #6a92c8;" text="Consultar" textFill="WHITE">
            <font>
                <Font name="Arial Bold" size="15.0" />
            </font>
        </Button>

    </children>
</AnchorPane>
