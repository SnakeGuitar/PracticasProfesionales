<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="520.0" prefWidth="820.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sgpp.controlador.usuarios.profesor.FXMLValidarReporteController">

    <VBox alignment="TOP_CENTER" spacing="15" AnchorPane.bottomAnchor="60" AnchorPane.leftAnchor="15" AnchorPane.rightAnchor="15" AnchorPane.topAnchor="15">

        <Label fx:id="lbTitulo" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #3b5998;" text="Entregas – Periodo X" />

        <!-- Tabla -->
        <TableView fx:id="tablaEntregas" prefHeight="380" prefWidth="780" style="-fx-border-color: #5b6fd4;">
            <columns>
                <TableColumn fx:id="colEstudiante" prefWidth="181.59997296333313" text="Estudiante" />
                <TableColumn fx:id="colReporte" prefWidth="135.99998474121094" text="Reporte" />
                <TableColumn fx:id="colFechaEntrega" prefWidth="163.20001220703125" text="Fecha entrega" />
                <TableColumn fx:id="colEstado" prefWidth="179.20010375976562" text="Estado" />
                <TableColumn fx:id="colHoras" prefWidth="128.79998779296875" text="Horas Reportadas" />
            </columns>
        </TableView>

        <!-- Botonera -->
        <HBox alignment="CENTER" spacing="20">
            <Button onAction="#actualizarLista" prefWidth="160" style="-fx-background-color: #5b6fd4; -fx-text-fill: white;" text="Actualizar lista" />
            <Button fx:id="btnValidar" onAction="#validarEntrega" prefWidth="120" style="-fx-background-color: #5b6fd4; -fx-text-fill: white;" text="Validar" />
            <Button fx:id="btnRechazar" onAction="#rechazarEntrega" prefWidth="120" style="-fx-background-color: #c0392b; -fx-text-fill: white;" text="Rechazar" />
        </HBox>
    </VBox>

    <!-- Botón Regresar -->
    <Button layoutX="695" layoutY="470" onAction="#volverAtras" prefWidth="100" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Regresar" />
</AnchorPane>
