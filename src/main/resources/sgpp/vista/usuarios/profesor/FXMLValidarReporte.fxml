<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sgpp.controlador.usuarios.profesor.FXMLValidarDocumentoController"
            prefWidth="800.0" prefHeight="500.0">

    <VBox spacing="20.0"
          alignment="TOP_CENTER"
          AnchorPane.topAnchor="20.0"
          AnchorPane.leftAnchor="20.0"
          AnchorPane.rightAnchor="20.0"
          AnchorPane.bottomAnchor="20.0">

        <Label text="Lista de Entregas del Periodo 4"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #3b5998;" />

        <TableView fx:id="tablaEntregas"
                   prefHeight="380.0"
                   prefWidth="760.0"
                   style="-fx-border-color: #5b6fd4;">

            <columns>
                <TableColumn fx:id="colID" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colEstudiante" text="Estudiante" prefWidth="200"/>
                <TableColumn fx:id="colReporte" text="NÂ° Reporte" prefWidth="100"/>
                <TableColumn fx:id="colFechaEntrega" text="Fecha de Entrega" prefWidth="200"/>
                <TableColumn fx:id="colEstado" text="Estado" prefWidth="180"/>
            </columns>
        </TableView>

        <Button text="Actualizar lista"
                onAction="#actualizarLista"
                style="-fx-background-color: #5b6fd4; -fx-text-fill: white;"
                prefWidth="180"
                prefHeight="35"
                />

    </VBox>
</AnchorPane>
