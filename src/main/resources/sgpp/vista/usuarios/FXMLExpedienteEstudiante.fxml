               <textFill>
                  <LinearGradient endX="0.883495145631068" endY="0.6699029126213593" startX="0.8883495145631068">
                     <stops>
                        <Stop color="#bfbfbf" />
                        <Stop color="#a8a8a8" offset="0.007246376811594203" />
                        <Stop color="WHITE" offset="1.0" />
                     </stops>
                  </LinearGradient>
               </textFill>
