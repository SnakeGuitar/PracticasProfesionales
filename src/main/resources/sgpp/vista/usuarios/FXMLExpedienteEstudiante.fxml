<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sgpp.controlador.usuarios.FXMLExpedienteEstudianteController">
   <children>

                        <!-- Botones inferiores -->
      <Button fx:id="btnDescargar" disable="true" layoutX="28.0" layoutY="542.0" mnemonicParsing="false" onAction="#clicBtnDescargar" prefHeight="31.0" prefWidth="152.0" styleClass="gradient-background-expediente" stylesheets="@../styles.css" text="Descargar" textFill="WHITE">
