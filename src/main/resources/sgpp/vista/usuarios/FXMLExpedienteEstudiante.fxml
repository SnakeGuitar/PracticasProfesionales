            <!-- Panel de información del estudiante -->
            <Pane blendMode="LIGHTEN" layoutX="194.0" layoutY="131.0" prefHeight="31.0" prefWidth="577.0" styleClass="gradient-background-expediente" stylesheets="@../styles.css">
